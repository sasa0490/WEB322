
<div class="flexbox" style="display:flex;">
    <div class="colside"></div>

   
<div class="row1234">
  <div class="col-75">
    <div class="container1234">
      <form action="/planedit/{{_id}}?method=PUT" method="POST" enctype="multipart/form-data"> 
        <h3>Plan Update</h3>
        <div class="row1234">
          <div class="col-50">
            
            <label for="_id"></label>
            <input type="text" id="pname" name="_id" value ="{{_id}}" style="display: none;">

            <label for="pname"><i class="fab fa-product-hunt"></i><b>Plan Name</b> </label>
            <input type="text" id="pname" name="pname" placeholder="Product Name" value ="{{pname}}">

            <label for="pprice"><i class="fas fa-dollar-sign"></i> <b>Plan price</b></label>
            <input type="text" id="pprice" name="pprice" placeholder="price" value = "{{pprice}}">

            <label for="type"><i class="fas fa-sort"></i><b>Plan category</b> </label>     
               <select name = "type" class="cate_design" style="width: 450px; ">
                <option value="">Select</option>
                <option value="suv"       {{#if (eq type 'suv')}} selected {{/if}}>suv</option>
                <option value="sedans"          {{#if (eq type 'sedans')}} selected {{/if}}>Sedans</option>
                <option value="coupes" {{#if (eq type 'coupes')}} selected {{/if}}>Coupes</option>
                <option value="cabriolets"    {{#if (eq type 'cabriolets')}} selected {{/if}}>Cabriolets</option>
            </select>

            <div class="row1234">
              <div class="col-50">
                <label for="pquan"><i class="fas fa-balance-scale-right"></i><b>&nbsp Product quantity</b></label>
                <select name = "pquan" class="best_design" style="width: 185px; height: 42px">
                  <option value="">Select</option>
                  <option value="1"{{#if (eq pquan 1)}} selected {{/if}}>1</option>
                  <option value="2"{{#if (eq pquan 2)}} selected {{/if}}>2</option>
                  <option value="3"{{#if (eq pquan 3)}} selected {{/if}}>3</option>
                  <option value="4"{{#if (eq pquan 4)}} selected {{/if}}>4</option>
                  <option value="5"{{#if (eq pquan 5)}} selected {{/if}}>5</option>
                  <option value="6"{{#if (eq pquan 6)}} selected {{/if}}>6</option>
                  <option value="7"{{#if (eq pquan 7)}} selected {{/if}}>7</option>
                  <option value="8"{{#if (eq pquan 8)}} selected {{/if}}>8</option>
                  <option value="9"{{#if (eq pquan 9)}} selected {{/if}}>9</option>
                  <option value="10"{{#if (eq pquan 10)}} selected {{/if}}>10</option>
              </select>
              </div>
            </div>
            <label for="pdet"><i class="fa fa-address-card-o"></i><b>&nbsp Product Detail</b> </label>
            <textarea type="text" id="plan_det" name="plan_det" style = "margin-left: 10px;width: 450px; height: 150px;">{{pdet}}</textarea>
          </div>
           <label><i class="fas fa-camera-retro"></i> &nbsp <b>File Upload</b></label>
              <input type="file" name="productPic" id="productPic" accept="image/*" value="{{this.productPic}}"><br><br>
          
        </div>
        <input type="submit" value="Finsih Addition" class="btn">
       

      </form>
    </div>
  </div>
  
</div>

<div class="colside"></div>
</div>

