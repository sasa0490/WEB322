<div class="flexbox" style="display:flex;">
  <div class="colside"></div>


  <div class="row1234">
    <div class="col-75">
      <div class="container1234">
        <form action="/productAdd" method="POST" enctype="multipart/form-data">
          <h3>Product Addition</h3>
          <div class="row1234">
            <div class="col-50">

              <label for="pname"><i class="fab fa-product-hunt"></i><b>Product Name</b> </label>
              <input type="text" id="pname" name="pname" placeholder="Product Name">

              <label for="pprice"><i class="fas fa-dollar-sign"></i> <b>Product price</b></label>
              <input type="text" id="pprice" name="pprice" placeholder="price">

              <label for="type"><i class="fas fa-sort"></i><b>Product category</b> </label>
              <select name="type" class="cate_design" style="width: 450px; ">
                <option value="">Select</option>
                <option value="suv">SUV</option>
                <option value="sedans">Sedans</option>
                <option value="coupes">Coupes</option>
                <option value="cabriolets">Cabriolets</option>
              </select>

              <div class="row1234">
                <div class="col-50">
                  <label for="pquan"><i class="fas fa-balance-scale-right"></i><b>&nbsp Product quantity</b></label>
                  <select name="pquan" class="best_design" style="width: 185px; height: 42px">
                    <option value="">Select</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                  </select>
                </div>
                <div class="col-51">
                  <label for="isBest"><i class="fas fa-thumbs-up"></i><b>&nbsp Best Seller</b></label>
                  <select name="isBest" class="best_design" style="width: 185px; height: 42px">
                    <option value="">Select</option>
                    <option value="yes">yes</option>
                    <option value="no">no</option>
                  </select>
                </div>
              </div>
              <label for="pdet"><i class="fa fa-address-card-o"></i><b>&nbsp Product Detail</b> </label>
              <textarea type="text" id="pdet" name="pdet" style = "margin-left: 10px;width: 450px; height: 150px;"></textarea>

              <label><i class="fas fa-camera-retro"></i> &nbsp <b>File Upload</b></label>
              <input type="file" name="productPic" id="productPic" accept="image/*">> <br><br>
            </div>


          </div>
          <input type="submit" value="Finsih Addition" class="btn">
        </form>
      </div>
    </div>

  </div>

  <div class="colside"></div>
</div>