 <form action="/login" method="Post">
            <div class="col-sm-12">
              {{#if dbError.loginError}}
              <p class="error">The password you entered was wrong!</p>
              {{/if}}
              <div class="row">
                <div class="col-lg-12 form-group">
                  <label for="email">Email Address</label>
                  <input id="email" name="email" type="text" placeholder="Email Address" class="form-control">
                  {{#if data.emailError}}
                  <p class="error">{{data.emailError}}</p>
                  {{/if}}
                </div>
              </div>
              <div class="row top-buffer">
                <div class="col-lg-12 form-group ">
                  <label for="password">Password</label>
                  <input id="password" name="password" type="password" placeholder="Password" class="form-control">
                  {{#if data.pError}}
                  <p class="error">{{data.pError}}</p>
                  {{/if}}
                </div>
              </div>
              <div class="remember-me top-buffer"> <input type="checkbox" id="remember-me" value="1" name="remember-me">
                <label for="remember-me">Remember me</label>
              </div>
              <input type="submit" class="btn btn-md btn-info  bottom-buffer" value="Submit" />
            </div>
          </form>